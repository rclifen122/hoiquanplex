# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=HoiQuanPlex CRM
NODE_ENV=development

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Bank Account Details (for manual bank transfer - v1)
BANK_NAME=Vietcombank
BANK_CODE=VCB
BANK_ACCOUNT_NUMBER=1234567890
BANK_ACCOUNT_NAME=NGUYEN VAN A
BANK_BRANCH=Chi nhanh TP. Ho Chi Minh

# Email Service Configuration (choose one)
# Option 1: Resend (recommended - free tier: 3,000 emails/month)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@hoiquanplex.site

# Option 2: SendGrid (alternative)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@hoiquanplex.site

# Stripe Configuration (for v3 - international payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# VNPay Configuration (for v2 - Vietnamese payment gateway)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=https://hoiquanplex.site/payment/vnpay/callback

# Admin Notifications
ADMIN_EMAIL=admin@hoiquanplex.site
ADMIN_NOTIFICATION_WEBHOOK=

# Security
NEXTAUTH_SECRET=your-nextauth-secret-min-32-characters
NEXTAUTH_URL=http://localhost:3000

# Cron Job Security (for Vercel Cron)
CRON_SECRET=your-random-cron-secret-key

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking (optional - Sentry)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
